# Application Configuration
NODE_ENV=development
PORT=3000

# API Configuration
API_PREFIX=api
API_VERSION=1.0

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Redis Configuration (if using Redis)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Swagger Configuration
SWAGGER_TITLE=Bookstore API
SWAGGER_DESCRIPTION=API for the bookstore application
SWAGGER_VERSION=1.0
SWAGGER_PATH=api

# Security
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=24h

# Database Configuration (if you plan to add a real database)
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=bookstore
# DATABASE_USER=postgres
# DATABASE_PASSWORD=password

# Logging
LOG_LEVEL=info
LOG_FORMAT=json 